page {
    background-color: #fff;
}

.wallet_head {
    width: 750rpx;
    height: 405rpx;
    background-image: url("https://sldc.oss-cn-beijing.aliyuncs.com/banner/beijing2.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}

.head_balance {
    color: #ffffff;
    font-size: 63rpx;
    text-align: center;
    padding-top: 80rpx;
}

.head_balance_txt {}

.wallet_head_usable {
    text-align: center;
    color: #ffffff;
    margin-top: 19rpx;
    font-size: 24rpx;
    display: flex;
    margin-left: 244rpx;
}

.wallet_head_usable>image {
    margin-top: 4rpx;
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
}

.wallet_detail {
    color: #333333;
    font-size: 30rpx;
    margin-left: 31rpx;
}

.wallet_content {
    padding: 23rpx 29rpx 23rpx 31rpx;
    /* width: 750rpx; */
    /* height: 110rpx; */
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #F1F1F1;
}

.wallet_content_lift {
    display: flex;
}

.wallet_content_lift image {
    width: 64rpx;
    height: 64rpx;
}

.wallet_content_txt {
    margin-left: 31rpx;
    color: #333333;
    font-size: 28rpx;
}

.exception {
    color: #999999;
    font-size: 20rpx;
}

.wallet_content_num {
    color: #333333;
    font-size: 28rpx;
}