<view class='zs'>
  <view class='zs-imgbox'>
    <image class='zs-img' lazy-load src='https://sldc.oss-cn-beijing.aliyuncs.com/20190824084556.png/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20200107141211.jpg'></image>
  </view>
  <form class="fromList" bindsubmit="joinFun">
    <view class='input_list'>
      <view class="input_item">
        <view class="input_item_txt">姓名:</view>
        <input class='input fromList_input' name='name' value='{{form.userName	}}' placeholder="必选项"></input>
      </view>
      <view class="input_item">
        <view class="input_item_txt">电话:</view>
        <input class='input fromList_input' maxlength='11' type='number' name='tel' value='{{form.phoneNumber}}' placeholder="必选项"></input>
      </view>
      <view class="input_item">
        <view class="input_item_txt">地区:</view>
        <input class='input fromList_input' name='dress' value='{{form.address}}'></input>
      </view>
      <view class="input_item">
        <view class="input_item_txt">公司名称:</view>
        <input class='input fromList_input' name='company' value='{{form.company}}'></input>
      </view>
    </view>
    <view class="btn_bg">
      <view class="btn_bg_xian"></view>
      <button class='item-join item-btn' hover-class="none" form-type='submit'>立即申请加盟</button>
      <view class="btn_bg_xian xian_right"></view>
    </view>
  </form>
</view>